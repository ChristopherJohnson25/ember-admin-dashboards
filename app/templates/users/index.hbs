{{outlet}}

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
    </tr>
  </thead>
  <tbody>
    {{#each users as |user i|}}
      <tr>
        <th scope="row">{{plus-one i}}</th>
        <td>{{#link-to 'users.show' user.id}}{{user.name}}{{/link-to}}</td>
        <td>{{user.name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.phone}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
